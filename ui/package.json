{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:tailwind": "rm -f src/index.css",
    "start": "npm-run-all clean -p start:*",
    "start:tailwind": "NODE_ENV=development postcss ./src/app.tw.css -o ./src/index.css -w",
    "start:cra": "wait-on src/index.css && PORT=3001 HTTPS=true EXTEND_ESLINT=true react-scripts start",
    "build": "npm-run-all build:tailwind build:cra",
    "build:tailwind": "NODE_ENV=production postcss ./src/app.tw.css -o ./src/index.css",
    "build:cra": "EXTEND_ESLINT=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint-check": "npm-run-all lint-check:*",
    "lint-check:non-src": "prettier --check '**/*.{md,css,json}'",
    "lint-check:src": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint": "npm-run-all lint:*",
    "lint:non-src": "prettier --write '**/*.{md,css,json}'",
    "lint:src": "yarn lint-check:src --fix",
    "gen:src": "./scripts/generate-client.sh"
  },
  "dependencies": {
    "@stackrox/ui-components": "^0.1.0",
    "axios": "^0.20.0",
    "formik": "^2.2.0",
    "history": "^5.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.8",
    "react-modal": "^3.11.2",
    "react-router-dom": "^6.0.0-beta.0",
    "react-spinners": "^0.9.0",
    "use-clipboard-copy": "^0.1.2",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@stackrox/tailwind-config": "^0.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.8",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-modal": "^3.10.6",
    "@types/yup": "^0.29.8",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-proxy-middleware": "^1.0.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.1.0",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.12",
    "typescript": "~3.9.7",
    "wait-on": "^5.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
