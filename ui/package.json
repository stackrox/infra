{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:tailwind": "rm -f src/index.css",
    "start": "npm-run-all clean -p start:*",
    "start:tailwind": "NODE_ENV=development postcss ./src/app.tw.css -o ./src/index.css -w",
    "start:cra": "wait-on src/index.css && PORT=3001 HTTPS=true EXTEND_ESLINT=true react-scripts start",
    "build": "npm-run-all build:tailwind build:cra",
    "build:tailwind": "NODE_ENV=production postcss ./src/app.tw.css -o ./src/index.css",
    "build:cra": "EXTEND_ESLINT=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint-check": "npm-run-all lint-check:*",
    "lint-check:non-src": "prettier --check '**/*.{md,css,json}'",
    "lint-check:src": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint": "npm-run-all lint:*",
    "lint:non-src": "prettier --write '**/*.{md,css,json}'",
    "lint:src": "yarn lint-check:src --fix",
    "gen:src": "./scripts/generate-client.sh"
  },
  "dependencies": {
    "@stackrox/ui-components": "^0.3.0",
    "axios": "^0.21.1",
    "formik": "^2.2.6",
    "history": "^5.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "namor": "^2.0.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-modal": "^3.13.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-spinners": "^0.10.6",
    "use-clipboard-copy": "^0.2.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@stackrox/tailwind-config": "^0.2.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@types/react-modal": "^3.12.0",
    "autoprefixer": "^10.2.5",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "http-proxy-middleware": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.1",
    "tailwindcss": "^2.0.4",
    "typescript": "~4.2.4",
    "wait-on": "^5.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
