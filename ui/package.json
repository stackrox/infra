{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:tailwind": "rm -f src/index.css",
    "start": "npm-run-all clean -p start:*",
    "start:tailwind": "NODE_ENV=development postcss ./src/app.tw.css -o ./src/index.css -w",
    "start:cra": "wait-on src/index.css && PORT=3001 HTTPS=true EXTEND_ESLINT=true react-scripts start",
    "build": "npm-run-all build:tailwind build:cra",
    "build:tailwind": "NODE_ENV=production postcss ./src/app.tw.css -o ./src/index.css",
    "build:cra": "EXTEND_ESLINT=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint-check": "npm-run-all lint-check:*",
    "lint-check:non-src": "prettier --check '**/*.{md,css,json}'",
    "lint-check:src": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint": "npm-run-all lint:*",
    "lint:non-src": "prettier --write '**/*.{md,css,json}'",
    "lint:src": "yarn lint-check:src --fix",
    "gen:src": "./scripts/generate-client.sh"
  },
  "dependencies": {
    "@stackrox/ui-components": "^0.2.0",
    "axios": "^0.21.1",
    "formik": "^2.2.6",
    "history": "^5.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-modal": "^3.12.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-spinners": "^0.10.4",
    "use-clipboard-copy": "^0.1.2",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@stackrox/tailwind-config": "^0.1.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.10.6",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.3.0",
    "http-proxy-middleware": "^1.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.2",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.1",
    "tailwindcss": "^1.9.6",
    "typescript": "~4.1.3",
    "wait-on": "^5.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
